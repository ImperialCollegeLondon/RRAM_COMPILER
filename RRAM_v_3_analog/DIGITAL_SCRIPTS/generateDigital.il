	sprintf(CMD "cd ./DIGITAL/simulation/%s/post_synthesis; irun -access +r -timescale 1ns/10ps -sdf_simtime -sdf_file ../../../constraints/%s/%s_syn.sdf  -sdf_verbose  -define SDF_ANNOTATE_TASK ../../../rtl/%s/%s_syn.v ../../../rtl/%s/tb_%s.v $TSMC_PDK_PATH/tsmc_libraries/TSMCHOME/digital/Front_End/verilog/tcb018gbwp7t_270a/original_tcb018gbwp7t.v" NAME NAME NAME NAME NAME NAME NAME)
	printf("SYSTEM: %s\n" CMD)
