	ipcWait(CID)
	printf("CHECK TERMINAL FOR SIMULATION RESULTS\n")
	sprintf(CMD "cat ./DIGITAL/simulation/%s/post_synthesis/irun.log" NAME)
	system(CMD)

	; STEP 4
